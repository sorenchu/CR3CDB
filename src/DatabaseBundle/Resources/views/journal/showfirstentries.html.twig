{# src/DatabaseBundle/Resources/views/journal/showfirstentries.html.twig #}
<div id="showFirstEntries">
<table class="journal">
{% set row = journalLength -1 %}
{% for entry in personalData.getInitialJournal(curSeason) %}
    <tr class="journal">
        <td class="journaltext">
    {{ entry.getDate().format('d-m-Y') }} - <strong>{{ entry.getTitle }}</strong>
        </td>
        <td class="journal">
    <a href="#" data-toggle="modal" data-target="#editEntry-{{row}}">{% trans %} editjournal {% endtrans %} </a>
        </td>
        <td class="journal">
    <a href="/journal/deleteEntry/{{entry.getId()}}" onclick="return confirm('¿Estás seguro de querer borrar esta entrada?')" >{% trans %} delete {% endtrans %}</a>
        </td>
    </tr>
    <tr class="journal">
        <td class="journal">{{ entry.getText() }}</td>
    </tr>
    {% set row = row -1 %}
{% endfor %}
</table>
</div>

{% if journalLength > 0 %}
    {% for i in 0..journalLength -1 %}
    <div class="modal fade" id="editEntry-{{i}}" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="editEntryModalLabel">
                {% trans %} editjournal {% endtrans %}
            </h4>
          </div>
            {% set form = journalForms[i].createView() %}
            {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.text) }}  
                <span style="display:none">
                {{ form_row(form.position) }}
                </span>
            {{ form_end(form) }}
        </div>
      </div>
    </div>
    {% endfor %}
{% endif %}
