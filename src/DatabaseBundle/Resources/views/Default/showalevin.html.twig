{% extends 'DatabaseBundle:base:base.html.twig' %}

{% block title %} 
     Mostrando equipo alevin
{% endblock %}

{% block body %}

<h1>Miembros del alevín</h1>
<table style="width: 100%">
<tr>
  <th><strong>Nombre</strong></th>
  <th><strong>Apellidos</strong></th>
  <th><strong>Apodo</strong></th>
  <th><strong>Email</strong></th>
  <th>Número de teléfono</th>
  <th>Pagos</th>
</tr>
{% for data in playerData %}
  <tr>
  <td> {{ data.getPersonalData().getName() }} </td>
  <td> {{ data.getPersonalData().getSurname() }} </td>
  <td> {{ data.getPersonalData().getNickname() }} </td>
  <td> {{ data.getPersonalData().getEmail() }} </td>
  <td> {{ data.getPersonalData().getPhone() }} </td>
  <td> {{ data.getPayment() }} </td>
  <td> <a href="/person/editPerson/{{data.getPersonalData().getId()}}"> Editar </a> </td>
  <td> <a href="/person/deletePerson/{{data.getPersonalData().getId()}}" onclick="return confirm('¿Estás seguro de querer borrar este miembro?')"> Eliminar </a> </td>
  </tr>
{% endfor %}
</table>
{% endblock %}
