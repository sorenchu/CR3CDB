{% extends 'DatabaseBundle:base:base.html.twig' %}

{% block title %}
    Mostrando todas las temporadas
{% endblock %}

{% block body %}
<h1>Temporadas existentes</h1>
{% if seasons|length == 0 %}
  <span> No se han añadido temporadas todavía. <a href="/season/newSeason">Añade una</a></span>
{% else %}
  <table>
  <tr>
    <th><strong>Temporada</strong></th>
    <th><strong>Predeterminada</strong></th>
  <tr>
  {% for season in seasons %}
    <tr>
      <td> {{ season.getSeasonText() }} </td>
      <td> {% if season.getDefaultseason() == 1 %} X
           {% else %} {% endif %}
      </td>
    </tr>
  {% endfor %}
{% endif %}

{% endblock %}
